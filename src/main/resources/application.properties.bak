server.port=${SERVER_PORT:8080}
spring.datasource.url=${SPRING_DATASOURCE_URL:jdbc:mysql://127.0.0.1:3306/herbbox?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC}
spring.datasource.username=${SPRING_DATASOURCE_USERNAME:appuser}
spring.datasource.password=${SPRING_DATASOURCE_PASSWORD:StrongP@ssw0rd!}

spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

mqtt.broker=${MQTT_BROKER:tcp://localhost:1883}
mqtt.client-id=${MQTT_CLIENT_ID:astra-backend-client}
mqtt.topic=boxes/+/telemetry
mqtt.ackTopic=boxes/+/ack

Add-Content -Path src\main\resources\application.properties -Value "`n# duplicate-safe mqtt client id (camelCase + kebab-case) `nmqtt.clientId=${MQTT_CLIENT_ID:astra-backend-client}"


